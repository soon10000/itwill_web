<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
  
  <configuration>
    <settings>
        <!-- 테이블 컬럼 이름의 밑줄(underscore)를 자바 클래스의 카멜 표기법 필드로 변환 -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <typeAliases>
        <typeAlias type="com.itwill.spring02.repository.Post" alias="Post"/>
        <typeAlias type="com.itwill.spring02.repository.Comment" alias="Comment"/>
        <typeAlias type="com.itwill.spring02.repository.User" alias="User"/>
    </typeAliases>
  </configuration>
  